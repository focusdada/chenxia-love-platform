@model LovePlatform.Domain.Models.User
@{
    ViewData["Title"] = "编辑患者信息";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">编辑患者信息</h4>
        </div>
        <div class="modal-body">
            <form class="form-horizontal" role="form" asp-controller="User" asp-action="EditUserInfo" method="post" id="editform">
                <input asp-for="Id" hidden />
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-4 control-label" asp-for="Type">患者类型</label>
                        <div class="col-md-6">
                            <select class="form-control" asp-for="Type" asp-items="@ViewBag.UserTypeList"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" asp-for="Name">患者姓名</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="患者姓名" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" asp-for="Gender">性别</label>
                        <div class="col-md-6">
                            <select class="form-control" asp-for="Gender" asp-items="ViewBag.UserGenderList"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" asp-for="Birthday">出生日期</label>
                        <div class="col-md-6">
                            <input type="date" class="form-control" placeholder="出生日期" asp-for="Birthday">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" asp-for="ResidentialPlace">居住地</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="居住地" asp-for="ResidentialPlace">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" asp-for="Contact">联系方式1</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="联系方式1" asp-for="Contact">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" asp-for="ContactReserve">联系方式2</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="联系方式2" asp-for="ContactReserve">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" asp-for="ContactReserve1">联系方式3</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="联系方式3" asp-for="ContactReserve1">
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn dark btn-outline" data-dismiss="modal">关闭</button>
            <button type="button" class="btn green" onclick="Submit()">保存更改</button>
        </div>
    </div>
</div>

<script>
    function Submit() {
        $.ajax({
            url: "@Url.Action("EditUserInfo", "User")",
            type: "POST",
            data: $("#editform").serialize(),
            success: function (data) {
                $("#editmodal").empty();
                $("#editmodal").modal("hide");
                Search();
            }
        });
    }
</script>
